@model List<GradeNet.Infrastructure.ViewModels.EventViewModel>
<h4>Lista zapowiedzianych wydarzeń</h4> 
<table>
    <tr>
        <th>
            Data
        </th>
        <th>
            Wydarzenie
        </th>
        <th>
            Opis
        </th>
        @*<th></th>*@
        <th></th>
    </tr>
