         </td>*@
         <td>
             <form action="DeleteEvent" method="get">
                 <input type="hidden" name="classId" value="@ViewBag.ClassId" />
                 <input type="hidden" name="eventId" value="@ev.EventId" />
                 <input type="submit" value="Usuń" />
             </form>
         </td>
     </tr>
